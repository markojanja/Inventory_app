<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/index.css" />
    <title>Inventory - <%= title %></title>
  </head>
  <body>
    <div class="wrapper">
      <%- include('partials/nav') %> <%- include('partials/sidebar') %>
      <header
        class="flex items-start content-center min-h-40 bg-gradient-1 pt-6 md-p-4"
      >
        <h2 class="font-s-3">Products</h2>
      </header>
      <section class="flex flex-col flex-1 gap-2">
        <div class="grid grid-cols-4 grid-center w-80 gap-2 margin-0-auto">
          <% if (products) { %> <% products.forEach(product => { %>
          <div class="grid-card">
            <div class="grid-overlay"></div>
            <img src="<%= product.imageurl %> " alt="<%= product.title %> " />
            <a href="/products/<%= product.slug %>" class="product-title"
              ><%= product.title%></a
            >
            <div class="info">
              <p>$ <%= product.price %></p>
              <p>Stock:<%= product.stock %></p>
            </div>
          </div>
          <% }) %> <% } %>
        </div>
      </section>
      <%- include('partials/footer') %>
    </div>
    <script src="/navbar.js"></script>
  </body>
</html>
