<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/index.css" />
    <title>Inventory - <%= category.title %></title>
  </head>
  <body>
    <div class="wrapper">
      <%- include('partials/nav') %> <%- include('partials/sidebar') %>
      <header class="flex items-start content-center min-h-40 bg-gradient-1 pt-6">
        <h2 class="font-s-3"><%= category.title %></h2>
      </header>
      <section class="flex flex-col flex-1 gap-2">
        <% if (products.length) { %>
        <div class="grid grid-cols-4 w-80 gap-2 margin-0-auto">
          <% products.forEach(product => { %>
          <div class="grid-card">
            <div class="grid-overlay"></div>
            <img src="<%= product.imageurl %> " alt="<%= product.title %> " />
            <a href="/products/<%= product.slug %>" class="product-title"><%= product.title%> </a>
          </div>
          <% }) %>
        </div>
        <% } else { %>
        <div class="no-content flex items-center content-center">
          <h2>There are no products in this category currently.</h2>
        </div>
        <% } %>
      </section>
      <%- include('partials/footer') %>
    </div>
    <script src="/navbar.js"></script>
  </body>
</html>
